<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="bootstrap.php">
	<testsuites>
		<testsuite name="Components">
			<directory>Components</directory>
		</testsuite>
		<testsuite name="Behaviour">
			<directory>Behaviour</directory>
		</testsuite>
	</testsuites>
	<filter>
		<blacklist>
			<directory suffix=".php">../UnitTests</directory>
			<file>../Glucose/Inflector.class.php</file>
			<file>../Glucose/ImmutableArrayObject.class.php</file>
			<file>../Glucose/autoloader.inc.php</file>
		</blacklist>
	</filter>
</phpunit>